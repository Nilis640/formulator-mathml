<!--                                                                        -->
<!-- TOOLBAR: Content MathML: Algebra Templates                             -->
<!--                                                                        -->
<toolbar id="@t@Algebra@"
         group="Content"
         name="Algebra operators"
         caption="Algebra" 
         image="images/buttons/cm_algebra.bmp"
         image-title="images/title/t_cm_algebra_n.bmp"
         image-title-hot="images/title/t_cm_algebra_h.bmp"

         columns="2" >


  <!-- abs                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The abs element represents the absolute value of a real quantity or the modulus of a complex quantity"
          id="@cm_abs" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
          <abs/>
    </math>
  </button>


  <!-- abs                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The abs element represents the absolute value of a real quantity or the modulus of a complex quantity"
          id="@cm_abs1" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <abs/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>


  <!-- conjugate                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The conjugate element represents the complex conjugate of a complex quantity"
          id="@cm_conjugate" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
          <conjugate/>
    </math>
  </button>


  <!-- conjugate                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The conjugate element represents the complex conjugate of a complex quantity"
          id="@cm_conjugate1" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <conjugate/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>


  <!-- arg                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The arg operator gives the 'argument' of a complex number, which is the angle (in radians) it makes with the positive real axis"
          id="@cm_arg" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
          <arg/>
    </math>
  </button>


  <!-- arg                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The arg operator gives the 'argument' of a complex number, which is the angle (in radians) it makes with the positive real axis"
          id="@cm_arg1" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <arg/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>


  <!-- real                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The real operator gives the real part of a complex number"
          id="@cm_real" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
          <real/>
    </math>
  </button>


  <!-- real                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The real operator gives the real part of a complex number"
          id="@cm_real1" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <real/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>


  <!-- imaginary                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The imaginary operator gives the imaginary part of a complex number"
          id="@cm_imaginary" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
          <imaginary/>
    </math>
  </button>


  <!-- imaginary                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The imaginary operator gives the imaginary part of a complex number"
          id="@cm_imaginary1" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <imaginary/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>


</toolbar>
