<!--                                                                        -->
<!-- TOOLBAR: Summation templates                                           -->
<!--                                                                        -->
<toolbar id="@t@Sum@"
         group="Presentation"
         name="Summation templates" 
         caption="Sum"
         image="images/buttons/summation.bmp"
         image-title="images/title/t_summation_n.bmp" 
         image-title-hot="images/title/t_summation_h.bmp" >

  <!-- Summation with no limits                                             -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Summation with no limits (Ctrl+T,Shift+S)" id="@sum_nl" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="T" />
        <sequence shift="yes" key="S" />
      </hot-key>
    </hot-keys>
    <math display='block'>
      <mrow>
        <mo>&sum;</mo>
        <mrow></mrow>
      </mrow>
    </math>
  </button>


  <!-- Summation with underscript limit                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Summation with underscript limit (Ctrl+T,Alt+S)" id="@sum_ul" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="T" />
        <sequence alt ="yes" key="S" />
      </hot-key>
    </hot-keys>
    <math display='block'>
      <mrow>
        <munder>
          <mo>&sum;</mo>
          <mrow></mrow>
        </munder>
        <mrow></mrow>
      </mrow>
    </math>
  </button>


  <!-- Summation with underscript and overscript                            -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Summation with underscript and overscript (Ctrl+T,S)" id="@sum_uol" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="T" />
        <sequence            key="S" />
      </hot-key>
    </hot-keys>
    <math display='block'>
      <mrow>
        <munderover>
          <mo>&sum;</mo>
          <mrow></mrow>
          <mrow></mrow>
        </munderover>
        <mrow></mrow>
      </mrow>
    </math>
  </button>


  <!-- Summation with subscript limit                                       -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Summation with subscript limit" id="@sum_subl" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
      <mrow>
        <msub>
          <mo>&sum;</mo>
          <mrow></mrow>
        </msub>
        <mrow></mrow>
      </mrow>
    </math>
  </button>


  <!-- Summation with subscript and superscript limit                       -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Summation with subscript and superscript limit" id="@sum_subsupl" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
      <mrow>
        <msubsup>
          <mo>&sum;</mo>
          <mrow></mrow>
          <mrow></mrow>
        </msubsup>
        <mrow></mrow>
      </mrow>
    </math>
  </button>

</toolbar>
