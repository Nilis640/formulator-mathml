  </button>


  <!-- North west arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="North west arrow"
          type="text" value="&amp;#x2196;" style="mathextra" id="@aarrow_nw"
  >
