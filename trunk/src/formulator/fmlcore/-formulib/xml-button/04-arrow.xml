    <mathml value="&vArr;" type="mo" />
    <dsr head="@darrow_v" tail=" " param="$empty$" />
  </button>


  <!-- Upwards double arrow                                                 -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Upwards double arrow (Ctrl+K,Shift+Up)"
          type="text" value="&amp;#x21D1;" style="mathextra" id="@darrow_u"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="K" />
        <sequence shift="yes" key="Up" />
      </hot-key>
    </hot-keys>
    <mathml value="&uArr;" type="mo" />
    <dsr head="@darrow_u" tail=" " param="$empty$" />
  </button>


  <!-- Downwards double arrow                                               -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Downwards double arrow (Ctrl+K,Shift+Down)"
          type="text" value="&amp;#x21D3;" style="mathextra" id="@darrow_d"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="K" />
        <sequence shift="yes" key="Down" />
      </hot-key>
    </hot-keys>
    <mathml value="&dArr;" type="mo" />
    <dsr head="@darrow_d" tail=" " param="$empty$" />
  </button>


  <!-- North east arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="North east arrow"
          type="text" value="&amp;#x2197;" style="mathextra" id="@aarrow_ne"
  >
    <mathml value="&nearr;" type="mo" />
    <dsr head="@aarrow_ne" tail=" " param="$empty$" />
  </button>


  <!-- South west arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="South west arrow"
