    <dsr head="@aarrow_nw" tail=" " param="$empty$" />
  </button>


  <!-- Rightwards arrow over leftwards arrow                                -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Rightwards arrow over leftwards arrow"
          type="text" value="&amp;#x21C4;" style="mathextra" id="@aarrow_rlarr"
  >
    <mathml value="&rlarr;" type="mo" />
    <dsr head="@aarrow_rlarr" tail=" " param="$empty$" />
  </button>


  <!-- Right harpoon over left harpoon                                      -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Right harpoon over left harpoon"
          type="text" value="&amp;#x21CC;" style="mathextra" id="@aarrow_rlhar"
  >
    <mathml value="&rlhar;" type="mo" />
    <dsr head="@aarrow_rlhar" tail=" " param="$empty$" />
  </button>


  <!-- Rightwards arrow from bar                                            -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Rightwards arrow from bar (Ctrl+K,Tab)"
          type="text" value="&amp;#x21A6;" style="mathextra" id="@arrow_map"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
