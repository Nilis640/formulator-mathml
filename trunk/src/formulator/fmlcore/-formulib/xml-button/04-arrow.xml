<!--                                                                        -->
<!-- TOOLBAR: Arrow symbols                                                 -->
<!--                                                                        -->
<toolbar id="@t@Arrow@"
         group="Presentation"
         name="Arrow symbols" 
         caption="Arrow"
         image="images/buttons/arrow.bmp"
         image-title="images/title/t_arrow_n.bmp" 
         image-title-hot="images/title/t_arrow_h.bmp" >


  <!-- Left right arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Left right arrow (Ctrl+K,Alt+Left)"
          type="text" value="&amp;#x2194;" style="mathextra" id="@arrow_h"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence alt ="yes" key="Left" />
      </hot-key>
    </hot-keys>
    <mathml value="&harr;" type="mo" />
    <dsr head="@arrow_h" tail=" " param="$empty$" />
  </button>


  <!-- Rightwards arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Rightwards arrow (Ctrl+K,Right)"
          type="text" value="&amp;#x2192;" style="mathextra" id="@arrow_r"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence            key="Right" />
      </hot-key>
    </hot-keys>
    <mathml value="&rarr;" type="mo" />
    <dsr head="@arrow_r" tail=" " param="$empty$" />
  </button>


  <!-- Leftwards arrow                                                      -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Leftwards arrow (Ctrl+K,Left)"
          type="text" value="&amp;#x2190;" style="mathextra" id="@arrow_l"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence            key="Left" />
      </hot-key>
    </hot-keys>
    <mathml value="&larr;" type="mo" />
    <dsr head="@arrow_l" tail=" " param="$empty$" />
  </button>


  <!-- Up down arrow                                                        -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Up down arrow (Ctrl+K,Alt+Up)"
          type="text" value="&amp;#x2195;" style="mathextra" id="@arrow_v"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence alt ="yes" key="Up" />
      </hot-key>
    </hot-keys>
    <mathml value="&varr;" type="mo" />
    <dsr head="@arrow_v" tail=" " param="$empty$" />
  </button>


  <!-- Upwards arrow                                                        -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Upwards arrow (Ctrl+K,Up)"
          type="text" value="&amp;#x2191;" style="mathextra" id="@arrow_u"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence            key="Up" />
      </hot-key>
    </hot-keys>
    <mathml value="&uarr;" type="mo" />
    <dsr head="@arrow_u" tail=" " param="$empty$" />
  </button>


  <!-- Downwards arrow                                                      -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Downwards arrow (Ctrl+K,Down)"
          type="text" value="&amp;#x2193;" style="mathextra" id="@arrow_d"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence            key="Down" />
      </hot-key>
    </hot-keys>
    <mathml value="&darr;" type="mo" />
    <dsr head="@arrow_d" tail=" " param="$empty$" />
  </button>


  <!-- Left right double arrow                                              -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Left right double arrow (Ctrl+K,Alt+Shift+Left)"
          type="text" value="&amp;#x21D4;" style="mathextra" id="@darrow_h"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
        <sequence alt ="yes" shift="yes" key="Left" />
      </hot-key>
    </hot-keys>
    <mathml value="&hArr;" type="mo" />
    <dsr head="@darrow_h" tail=" " param="$empty$" />
  </button>


  <!-- Rightwards double arrow                                              -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Rightwards double arrow (Ctrl+K,Shift+Right)"
          type="text" value="&amp;#x21D2;" style="mathextra" id="@darrow_r"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="K" />
        <sequence shift="yes" key="Right" />
      </hot-key>
    </hot-keys>
    <mathml value="&rArr;" type="mo" />
    <dsr head="@darrow_r" tail=" " param="$empty$" />
  </button>


  <!-- Leftwards double arrow                                               -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Leftwards double arrow (Ctrl+K,Shift+Left)"
          type="text" value="&amp;#x21D0;" style="mathextra" id="@darrow_l"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="K" />
