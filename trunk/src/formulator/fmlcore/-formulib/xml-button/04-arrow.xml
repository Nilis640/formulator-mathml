    <mathml value="&lArr;" type="mo" />
    <dsr head="@darrow_l" tail=" " param="$empty$" />
  </button>


  <!-- Up down double arrow                                                 -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Up down double arrow (Ctrl+K,Alt+Shift+Up)"
          type="text" value="&amp;#x21D5;" style="mathextra" id="@darrow_v"
