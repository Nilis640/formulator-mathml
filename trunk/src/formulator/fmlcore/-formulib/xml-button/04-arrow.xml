  </button>


  <!-- South east arrow                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="South east arrow"
          type="text" value="&amp;#x2198;" style="mathextra" id="@aarrow_se"
  >
    <mathml value="&searr;" type="mo" />
