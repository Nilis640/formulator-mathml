      </hot-key>
    </hot-keys>
    <mathml value="&map;" type="mo" />
    <dsr head="@arrow_map" tail=" " param="$empty$" />
  </button>


  <!-- Downwards arrow with corner leftwards                                      -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Downwards arrow with corner leftwards (Ctrl+K,Enter)"
          type="text" value="&amp;#8629;" style="mathextra" id="@arrow_corner"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" key="K" />
