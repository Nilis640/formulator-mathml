<!-- TOOLBAR: Table templates                                               -->
<!--                                                                        -->
<toolbar id="@t@Table@"
         group="Presentation"
         name="Table templates"
         caption="Table"
         image="images/buttons/table.bmp"
         image-title="images/title/t_table_n.bmp" 
         image-title-hot="images/title/t_table_h.bmp" >

  <!-- 1 row 1 column frame                                                 -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="1 row 1 column frame" rows=1 columns=1 id="@table 1x1" 
          vertical-center-type="half"
  >
    <frames>
      <frame left= 0 top=0 right=100 bottom=100 halign="center" valign="center" />
    </frames>
    <mathml name="mrow" />
    <dsr head="@table( " tail=")" separator="," 
         param="$rows$" param="$columns$" param="$child_list$" bracket="off" />
  </button>


  <!-- 1 row 2 column table                                                -->
